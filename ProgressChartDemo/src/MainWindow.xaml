<Window x:Class="ProgressChartSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:progressChartSample="clr-namespace:ProgressChartSample"
        Title="MainWindow" Height="350" Width="525" 
        DataContext="{StaticResource MainWindowViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <progressChartSample:ProgressChartControl Grid.Row="0"  StatusEnum="{x:Type progressChartSample:StatusesEnum}" CurrentStatus="{Binding CurrentStatus}" Animate="True"/>
        <ComboBox Grid.Row="1" Height="25" Width="150" ItemsSource="{Binding AvailableStatuses}" SelectedItem="{Binding CurrentStatus}"/>
    </Grid>
</Window>
